{% block title %}
<h1> Liste des Patients </h1>

  

  <table border="2" class="table">
    <tr>
      <td>
        Nom et prénom
      </td>
      <td>
        Adresse mail
      </td>
      <td>
        Numero de téléphone
      </td>
      <td>
        Adresse
      </td>
       <td>
        Clinique
      </td>
      
    </tr>

    {% for p in listPatient %}
      <tr>
        <td>
          {{ p.name }}
        </td>
        <td>
          {{ p.email }}
        </td>
        <td>
          {{ p.phone }}
        </td>
        <td>
          {{ p.adresse }}
        </td>
         <td>
          {{ p.clinique.nomcl}}
        </td>
       
      </tr>
    {% endfor %}
  </table>
{% endblock %}
